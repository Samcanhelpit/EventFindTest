@page
@model EventFind.Pages.Events.DeleteModel
@{
    ViewData["Title"] = "Delete Event";
}

<h1>Delete Event</h1>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.Event.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Event.Description</dd>
        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.Event.StartDate.ToString("d MMM yyyy")</dd>
        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.Event.EndDate.ToString("d MMM yyyy")</dd>
        <dt class="col-sm-2">City</dt>
        <dd class="col-sm-10">@Model.Event.City</dd>
        <dt class="col-sm-2">Country</dt>
        <dd class="col-sm-10">@Model.Event.Country</dd>
        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Event.Address</dd>
        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Event.Category.Name</dd>
        <dt class="col-sm-2">SignUp Link For Creator</dt>
        <dd class="col-sm-10">@Model.Event.SignupLinkFromCreator</dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="Event.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
